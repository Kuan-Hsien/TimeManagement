    <style name="RecordPageActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_record_button</item>
        <item name="android:textColor">@color/color_recordpage_button_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_record_button</item>
        <item name="android:background">@drawable/ripple_recordpage_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <!--<item name="android:background">@drawable/ripple_recordpage_button</item>-->
    <!-- parent="Widget.AppCompat.Button.Borderless" -->
    <!-- <item name="android:textAllCaps">false</item> -->

    <style name="RecordPageTask">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_record_task</item>
        <item name="android:textColor">@color/color_recordpage_button_text</item>
        <item name="android:background">@drawable/shape_task_icon</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!--<item name="android:background">@drawable/shape_recordpage_task</item>-->
    <!-- <item name="android:elevation">2dp</item> -->


    <style name="Tablayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicatorColor">@color/color_app_clock_yellow</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextColor">@color/color_app_default_grey</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@color/color_app_clock_dark_blue</item>
        <item name="android:elevation">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>
    <!-- <item name="android:elevation">2dp</item> -->


    <style name="RecyclerViewLinearCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingTop">@dimen/padding_recyclerview_height</item>
        <item name="android:paddingBottom">@dimen/padding_recyclerview_height</item>
        <item name="android:background">@color/color_app_card_background_grey</item>

    </style>



    <style name="TextViewAddTaskCategoryLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_category_tag</item>
        <item name="android:padding">@dimen/padding_textview_addtask_category_label</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="TextViewCardCategoryLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_category_tag</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">@dimen/maxwidth_textview_card_category_label</item>
        <item name="android:paddingStart">@dimen/padding_category_name_width</item>
        <item name="android:paddingEnd">@dimen/padding_category_name_width</item>
        <item name="android:paddingBottom">@dimen/padding_category_name_hight</item>

    </style>


    <style name="TextViewEditTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/textsize_textview_edit_title</item>
        <item name="android:maxWidth">@dimen/maxwidth_textview_edit_title</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="TextRecordPage">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:elevation">2dp</item>
        <item name="android:gravity">center</item>

    </style>


</resources>
