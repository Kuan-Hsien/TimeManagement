<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_notification_summary_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageview_notificaiton_task_icon"
        android:layout_width="@dimen/width_notificaiton_task_icon"
        android:layout_height="@dimen/width_notificaiton_task_icon"
        android:layout_marginStart="5dp"
        tools:background="@android:color/black"
        tools:srcCompat="@drawable/btn_delete" />

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearlayout_notification_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_notification_task_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="11sp"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="TASKNAME"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
                tools:visibility="gone"/>

            <TextView
                android:id="@+id/textview_notification_task_name_complete"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone"
                android:textStyle="italic"
                android:text="TASKNAME"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textview_notification_cost_time"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@android:color/black"
                android:text="888h 888m"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/textview_notification_cost_time_complete"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:singleLine="true"
                android:ellipsize="end"
                android:visibility="gone"
                android:textStyle="italic"
                android:text="888h 888m"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
                tools:visibility="visible" />

        </LinearLayout>


        <ImageView
            android:id="@+id/image_notification_strikethrough_complete"
            android:layout_width="114dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="3dp"
            android:layout_gravity="start|center"
            android:background="@android:color/darker_gray"
            android:visibility="gone"
            tools:visibility="visible">

        </ImageView>

    </FrameLayout>

</LinearLayout>