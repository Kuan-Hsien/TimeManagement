<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_plan_top_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true" >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintlayout_plan_top_view_mode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_main_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <ImageView
            android:id="@+id/imageview_plan_top_add_item"
            android:layout_width="@dimen/size_all_add_item"
            android:layout_height="@dimen/size_all_add_item"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/textview_plan_top_add_item"
            android:layout_width="@dimen/width_plan_top_add_item"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imageview_plan_top_add_item"
            app:layout_constraintTop_toTopOf="parent"
            android:text="新增/調整目標"
            tools:text="Set a new target" />

        <TextView
            android:id="@+id/textview_plan_top_remaining_time"
            android:layout_width="@dimen/width_plan_task_time"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:background="@android:color/holo_purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="16 hr" />


    </android.support.constraint.ConstraintLayout>

    <!-- Visible in edit mode -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintlayout_plan_set_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_plan_top_view_mode"
        app:layout_constraintStart_toStartOf="parent" >

        <!-- Set target title and save/cancel button -->
        <!-- title -->
        <TextView
            android:id="@+id/textview_plan_set_target_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="8dp"
            android:text="新增目標"
            android:textSize="14dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- save button -->
        <ImageView
            android:id="@+id/imageview_plan_set_target_save"
            android:layout_width="@dimen/width_set_target_send_button"
            android:layout_height="@dimen/height_set_target_send_button"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_blue_bright"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/if_revisi_05_2191542"
            android:clickable="true"
            android:focusable="true" />

        <!-- cancel button -->
        <ImageView
            android:id="@+id/imageview_plan_set_target_cancel"
            android:layout_width="@dimen/width_set_target_send_button"
            android:layout_height="@dimen/height_set_target_send_button"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_blue_bright"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/imageview_plan_set_target_save"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/if_revisi_04_2191538"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/imageview_plan_set_target_title_separationline"
            android:layout_width="@dimen/width_detail_contentarea"
            android:layout_height="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_plan_set_target_title" />

        <!-- Set target content -->
        <!-- category -->
        <TextView
            android:id="@+id/textview_plan_set_target_category"
            android:layout_width="@dimen/width_set_target_item"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageview_plan_set_target_title_separationline"
            android:text="Choose a category"
            tools:text="Choose a category" />

        <EditText
            android:id="@+id/edittext_plan_set_target_category"
            android:layout_width="@dimen/width_set_target_item"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_plan_set_target_category"
            tools:text="Choose a category" />

        <!-- task -->
        <TextView
            android:id="@+id/textview_plan_set_target_task"
            android:layout_width="@dimen/width_set_target_item"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_plan_set_target_category"
            android:text="Choose a task"
            tools:text="Choose a task" />

        <EditText
            android:id="@+id/edittext_plan_set_target_task"
            android:layout_width="@dimen/width_set_target_item"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_plan_set_target_task"
            tools:text="Choose a task" />

        <!-- seekbar to set time target  -->
        <TextView
            android:id="@+id/textview_plan_set_target_cost_time"
            android:layout_width="@dimen/width_set_target_item"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_plan_set_target_task"
            android:text="Set time"
            tools:text="Choose a task" />

        <!-- TODO change to progress bar to set time target -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TODO: change to progress bar to set time target"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_plan_set_target_cost_time"
            app:layout_constraintStart_toStartOf="parent" />


        <!-- TODO add green circle and white check for continuous adding -->


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
