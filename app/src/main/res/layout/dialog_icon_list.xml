<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_icon_list_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog">

    <LinearLayout
        android:id="@+id/linearlayout_icon_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textview_icon_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/height_icon_dialog_padding"
            android:paddingStart="15dp"
            android:text="Choose an icon:"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_icon_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="@dimen/width_icon_dialog_padding"
        android:paddingEnd="@dimen/width_icon_dialog_padding"
        android:paddingTop="@dimen/height_icon_dialog_padding"
        android:paddingBottom="@dimen/height_icon_dialog_padding"
        >
        <!-- android:background="@color/color_app_card_background_grey" -->

    </android.support.v7.widget.RecyclerView>



</LinearLayout>