<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trace.daily.TraceDailyFragment">
    
    <LinearLayout
        android:id="@+id/linearlayout_trace_period_daily"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true" >
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="linearlayout_trace_period_daily"
            android:textSize="14dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart_analysis_top_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    
    </LinearLayout>
    <!--android:layout_height="@dimen/height_trace_period"-->
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_trace_daily"
        style="@style/RecyclerViewLinearCard"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout_trace_period_daily"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>