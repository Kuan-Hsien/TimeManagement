<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_notification_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- Summary -->
    <!-- Daily -->
        <!-- Daily notification title (optional) -->
        <TextView android:id="@+id/textview_daily_summary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily summary:"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"/>

        <!-- Daily notification content -->
        <GridLayout
            android:id="@+id/linearlayout_notification_daily_summary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_notificaiton_daily_summary"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:columnCount="2" >

        </GridLayout>

        <TextView
            android:id="@+id/textview_daily_summary_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="..."
            android:textSize="11sp"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"/>

    <!-- Weekly -->
        <!-- Weekly notification title -->
        <TextView
            android:id="@+id/textview_weekly_summary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weekly summary:"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"/>

        <!-- Weekly notification content -->
        <GridLayout
            android:id="@+id/linearlayout_notification_week_summary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_notificaiton_weekly_summary"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:columnCount="2" >

        </GridLayout>

        <!--<TextView-->
            <!--android:id="@+id/textview_weekly_summary_more"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:text="..."-->
            <!--android:textSize="11sp"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:textAppearance="@style/TextAppearance.Compat.Notification.Title"/>-->

        <TextView
            android:id="@+id/textview_weekly_summary_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="Click to check details..."
            android:textSize="11sp"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"/>

        <!-- Yesterday Records -->
        <!-- Today plans -->

</LinearLayout>