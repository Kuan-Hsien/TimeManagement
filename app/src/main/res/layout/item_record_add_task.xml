<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_record_add_task_item"
    style="@style/RecordPageTask"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_record_task"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    tools:background="@android:color/background_dark">

    <!---->

    <ImageView
        android:id="@+id/imageview_record_add_task_icon"
        android:layout_width="@dimen/size_record_task_icon"
        android:layout_height="@dimen/size_record_task_icon"
        android:layout_marginTop="@dimen/padding_record_task_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_add" />

    <TextView
        android:id="@+id/textview_record_add_task_name"
        android:layout_width="@dimen/width_record_task_name"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_record_task_icon"
        android:fontFamily="sans-serif-medium"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:maxLines="2"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Add a new task" />



    <!--android:layout_marginStart="16dp"-->
    <!--android:layout_marginEnd="10dp"-->
    <!--android:layout_marginTop="55dp"-->

