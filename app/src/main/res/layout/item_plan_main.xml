<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_plan_main_item"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_main_item" >

    <ImageView
        android:id="@+id/imageview_plan_task_icon"
        android:layout_width="@dimen/size_all_item_image"
        android:layout_height="@dimen/size_all_item_image"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_video_away" />

    <TextView
        android:id="@+id/textview_plan_task_name"
        android:layout_width="@dimen/width_plan_task_name"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lines="1"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageview_plan_task_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sleep" />

    <TextView
        android:id="@+id/textview_plan_task_cost_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-medium"
        android:lines="1"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:background="@android:color/holo_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="8 hr" />

    <!-- only show in Edit mode -->
    <ImageView
        android:id="@+id/imageview_plan_task_delete_hint"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/textview_plan_task_adjust_cost_time"
        android:layout_width="@dimen/width_plan_adjust_time_panel"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-medium"
        android:lines="1"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:text="TODO: add adjust panel to adjust time"
        android:textSize="15sp"
        android:background="@android:color/holo_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="8 hr" />

    <SeekBar
        android:id="@+id/seekbar_plan_task_adjust_cost_time_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:max="1440"
        android:progress="0"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <SeekBar
        android:id="@+id/seekbar_plan_task_adjust_cost_time_weekly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:max="10080"
        android:progress="0"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--android:layout_marginStart="16dp"-->
    <!--android:layout_marginEnd="10dp"-->
    <!--android:layout_marginTop="55dp"-->

    <!-- 可設定 progressBar 樣式 -->
    <!-- android:progressDrawable="@drawable/adjust_time_seekbar" -->

    <!-- 可設定 prgressBar 高度 -->
    <!--android:maxHeight="5dp"-->
    <!--android:minHeight="5dp"-->

    <!-- 設定滑動按鈕 -->
    <!--android:thumb=""-->


</android.support.constraint.ConstraintLayout>
