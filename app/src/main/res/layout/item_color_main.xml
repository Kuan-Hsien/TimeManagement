<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_task_color_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_height_recyclerview_color"
    android:paddingBottom="@dimen/padding_height_recyclerview_color"
    android:paddingStart="@dimen/padding_width_recyclerview_color"
    android:paddingEnd="@dimen/padding_width_recyclerview_color"
    android:background="@android:color/transparent"
    android:elevation="2dp"
    android:clickable="true"
    android:focusable="true"
    >

    <ImageView
        android:id="@+id/imageview_task_color_item"
        android:layout_width="@dimen/size_categroytask_category_item"
        android:layout_height="@dimen/size_categroytask_category_item"
        android:background="@drawable/shape_layout_color_radius_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>
